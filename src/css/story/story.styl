/* CUSTOM STORY STYLE */

#content
  background-color black
  color gold

figure.sticky
  position sticky
  width 100%
  height 100vh
  margin 0
  top 0vh
  left 0

  & canvas
    position absolute
    top 50%
    transform translateY(-50%)
    width 100%
    min-height 4rem

.intro__byline strong
  color white

article
  padding 0
  max-width 30rem
  margin 0 auto
  position relative

  .step
    min-height 67vh
    margin-bottom 1rem
    &:last-of-type
      margin-bottom 0
    &.is-active
      p
        color white
    p
      margin 0
      padding 1rem
      text-align center
      font-weight 400
      background-color rgba(0, 0, 0, 0.5)
      transition background-color 250ms ease-in-out
      color gray
      set-type-size(medium)
