/* CUSTOM STORY STYLE */

#content
  background-color black
  color gold

figure.sticky
  position sticky
  width 100%
  height 100vh
  margin 0
  top 0
  left 0

  & canvas
    position absolute
    top 50%
    transform translateY(-50%)
    width 100%
    min-height 4rem


article
  padding 0
  max-width 30rem
  margin 0 auto
  position relative

  .step
    min-height 67vh
    margin-bottom 1rem
    &:last-of-type
      margin-bottom 0
    &.is-active
      p
        background-color rgba(255, 255, 255, 0.5)
    p
      margin 0
      padding 1rem
      text-align center
      font-weight 400
      background-color rgba(0, 0, 0, 0.2)
      transition background-color 250ms ease-in-out
      color $off-white
      set-type-size(large)
