/* CUSTOM STORY STYLE */
html
  background-color black

strong
  color orangered

#content
  background-color black
  color gold

figure.sticky
  position sticky
  width 100%
  height 100vh
  margin 0
  top 0vh
  left 0
  pointer-events auto

  & canvas
    position absolute
    top 50%
    transform translateY(-50%)
    width 100%
    min-height 4rem

.intro__byline strong
  color white

article
  padding 0
  max-width 30rem
  margin 0 auto
  position relative
  pointer-events none

  .step
    min-height 67vh
    margin-bottom 1rem
    &:last-of-type
      margin-bottom 0
    &.is-active
      p
        color white
    p
      margin 0
      padding 1rem
      text-align center
      font-weight 400
      background-color rgba(0, 0, 0, 0.5)
      transition background-color 250ms ease-in-out
      color gray
      //set-type-size(medium)
      set-type-size('medium', lh = true)

.yw-footer
  min-height 50px
  background-color black
  & p
    padding 1rem 1rem
    set-type-size('x-small', lh =true)

a.yw-link
  color white

.yw_tooltip
  width 160px
  min-height 20px
  background-color rgba(0,0,0, 0.5)
  position absolute
  left -50rem
  top 2rem
  padding 8px
  transition 0.2s ease-in-out
  z-index 1000
  &.active
    transform: translate(52rem, 0)

.yw_tooltip p
  font-family Helvetica
  color #efefef
  margin 0px
  font-size 10px
